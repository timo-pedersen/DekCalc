<Window x:Class="DekCalc.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DekCalc"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" 
        Loaded="Window_Loaded">
  <Grid Name="TheGrid" SizeChanged="TheGrid_SizeChanged">
    <Grid.RowDefinitions>
      <RowDefinition Height="187*"/>
    </Grid.RowDefinitions>
    <Grid.ColumnDefinitions>
      <ColumnDefinition Width="131*"/>
      <ColumnDefinition Width="*"/>
      <ColumnDefinition Width="269*"/>
    </Grid.ColumnDefinitions>

    <GridSplitter Grid.Column="1"
              HorizontalAlignment="Center"
              VerticalAlignment="Stretch"
              Background="Black" 
              Width="5"
              />
    <Grid>
      <Grid.RowDefinitions>
        <RowDefinition Height="180*"/>
        <RowDefinition Height="*"/>
        <RowDefinition Height="187*"/>
      </Grid.RowDefinitions>

      <GridSplitter Grid.Row="1"
              HorizontalAlignment="Stretch"
                    VerticalAlignment="Center"
              Background="Black" 
              
              Height="5"
              />
      <TextBox Name="TextBox_Func" Grid.Row="0" HorizontalAlignment="Center" TextWrapping="Wrap" 
                 Text="Sin(x)" VerticalAlignment="Top" Height="124" Width="242" TabIndex="100" AcceptsReturn="True"/>

      <Button Grid.Row="0" Content="Compile" HorizontalAlignment="Left" Height="28" VerticalAlignment="Top" Width="120" Margin="131,129,0,0" Click="Button_Click_1" TabIndex="111"/>
      <TextBlock x:Name="Textb_Error" Grid.Row="2" HorizontalAlignment="Center" Height="201" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Center" Width="241"/>


    </Grid>

    <Image Name="ImageBox" Grid.Column="1" Cursor="Cross" GotFocus="Image_GotFocus" Grid.ColumnSpan="2" Margin="2,0,0,0"/>
  </Grid>
</Window>
